description "Nova Network server"
author "Longgeek <longgeek@gmail.com>"

start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [016]

respawn

exec su -s /bin/sh -c "exec nova-novncproxy --config-file /etc/nova/nova.conf --web <%= source_dir %>/noVNC >> /var/log/nova/nova-novncproxy.log 2>&1" root
